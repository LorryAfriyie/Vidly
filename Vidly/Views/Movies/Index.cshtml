@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section style="padding-top: 100px;" class="justify-content-center align-content-center text-center">
    <h2>Movies</h2>
    @Html.ActionLink("New Movie", "New", "Movies", new{ @class = "btn btn-primary"})
    <table class="table table-bordered table-hover mt-3 shadow">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@Html.ActionLink(movie.Name, "Edit", "Movies", new { id = movie.Id }, null)</td>
                <td>@movie.Genre.Name</td>
            </tr>
        }
    </tbody>
</table>
</section>

